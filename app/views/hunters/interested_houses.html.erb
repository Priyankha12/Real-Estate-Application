<p id="notice"><%= notice %></p>

<h1>Houses</h1>
<% if @myhouses.any? %>
<table>
  <thead>
  <tr>
    <th>Id</th>
    <th>Company</th>
    <th>Location</th>
    <th>Square footage</th>
    <th>Year</th>
    <th>Style</th>
    <th>Price</th>
    <th>Floors</th>
    <th>Basement</th>
    <th>Current owner</th>
    <th>Realtor</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @myhouses.each do |house| %>
    <tr>
      <td><%= house.id %></td>
      <td><%= house.real_estate_company_id %></td>
      <td><%= house.location %></td>
      <td><%= house.square_footage %></td>
      <td><%= house.year %></td>
      <td><%= house.style %></td>
      <td><%= house.price %></td>
      <td><%= house.floors %></td>
      <td><%= house.basement %></td>
      <td><%= house.current_owner %></td>
      <td><%= house.realtor.name %></td>
      <td><%=link_to 'Create inquiry' , {:controller => "inquiries", :action => "new", :house => house.id } %>

  <% end %>
  </tbody>
</table>
  <% else %>
  <h1>Sorry! There are no houses</h1>
  <% end %>

<br>

