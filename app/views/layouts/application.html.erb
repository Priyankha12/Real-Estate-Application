<!DOCTYPE html>
<html>
  <head>
    <title>Program2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if not realtor_signed_in? and not hunter_signed_in? %>
  <p>
  <%= link_to "Realtor Sign Up", new_realtor_registration_path %>


  <%= link_to "Hunter Sign Up", new_hunter_registration_path %>
  </p>
    <% end %>
  <br>

  <% if not hunter_signed_in? %>
  <% if realtor_signed_in? %>
  <%= link_to "Realtor Sign Out", destroy_realtor_session_path, method: :delete %>
    <% else %>
    <%= link_to "Realtor Sign In", new_realtor_session_path %>
    <% end %>
    <% end %>

    <% if not realtor_signed_in? %>
    <% if hunter_signed_in? %>
    <%= link_to "Hunter Sign Out", destroy_hunter_session_path, method: :delete %>
  <% else %>
    <%= link_to "Hunter Sign In", new_hunter_session_path %>
  <% end %>
    <% end %>

    <%= yield %>
  </body>
<br>
  <br>
  <br>
  <%= link_to "Go to admin page", admins_url %>
  <%= link_to "Show all real estate companies", real_estate_companies_url %>
  <%= link_to "Show all realtors", realtors_url %> <%= link_to "Show all house hunters", hunters_url %>
  <%= link_to "Show all houses", houses_url %> <%= link_to "Show all inquiries", inquiries_url %>

</html>
