<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <% if not realtor_signed_in? %>
  <div class="field">
    <%= form.label :real_estate_company_id %>
    <%= form.number_field :real_estate_company_id %>
  </div>
    <% else %>
    <%= form.hidden_field :real_estate_company_id, value: current_realtor.real_estate_company_id %>
  <%end %>


  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :square_footage %>
    <%= form.number_field :square_footage %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.date_select :year %>
  </div>

  <div class="field">
    <%= form.label :style %>
    <%= form.text_field :style %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :floors %>
    <%= form.number_field :floors %>
  </div>

  <div class="field">
    <%= form.label :basement %>
    <%= form.check_box :basement %>
  </div>

  <div class="field">
    <%= form.label :current_owner %>
    <%= form.text_field :current_owner %>
  </div>

  <% if not realtor_signed_in? %>
    <div class="field">
      <%= form.label :realtor_id %>
      <%= form.number_field :realtor_id %>
    </div>
  <% else %>
    <%= form.hidden_field :realtor_id, value: current_realtor.id %>
  <%end %>

  <div class="field"> <%= form.label :image %> <%= form.file_field :image %> </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
